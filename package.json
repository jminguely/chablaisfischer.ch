{
  "name": "chablaisfischer.ch",
  "version": "1.0.0",
  "description": "Chablaisfischer.ch monorepo with WordPress Bedrock CMS and Nuxt.js frontend",
  "private": true,
  "workspaces": [
    "frontend"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=frontend",
    "build": "npm run build --workspace=frontend",
    "generate": "npm run generate --workspace=frontend",
    "preview": "npm run preview --workspace=frontend",
    "lint": "npm run lint --workspace=frontend",
    "typecheck": "npm run typecheck --workspace=frontend",
    "frontend:install": "npm install --workspace=frontend",
    "wordpress:install": "cd wordpress && composer install",
    "wordpress:lint": "cd wordpress && composer run lint",
    "wordpress:lint:fix": "cd wordpress && composer run lint:fix",
    "install:all": "npm install && npm run wordpress:install",
    "clean": "rm -rf node_modules frontend/node_modules frontend/.nuxt frontend/dist"
  },
  "engines": {
    "node": ">=18.18.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:jminguely/chablaisfischer.ch.git"
  },
  "keywords": [
    "monorepo",
    "wordpress",
    "bedrock",
    "nuxt",
    "headless-cms",
    "graphql",
    "wpgraphql"
  ],
  "author": "jminguely",
  "license": "MIT"
}
